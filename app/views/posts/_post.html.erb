<div class="alert alert-light">
  <h3><%= post.title %></h3>
  <div class="clearfix">
    <%= image_tag  post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
    <%= post.body.html_safe %>
    <%= link_to "Read more", post_path(post), :class => 'btn btn-outline-primary' %>
  </div>
  <hr>
</div>